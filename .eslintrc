{
  "extends": ["airbnb"],
  "plugins": ["webdriverio"],
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "no-debugger": "error",
    "no-alert": "error",
    "no-console": "error",
    "max-len": ["error", {
      "code": 120,
      "tabWidth": 2
    }],
    "react/display-name": ["error", {
      "ignoreTranspilerName": true
    }],
    "react/prefer-stateless-function": "error",
    "linebreak-style": 0,
    "react/jsx-filename-extension": ["error", {
      "extensions": [".test.js", ".jsx"]
    }]
  },
  "env": {
    "browser": true,
    "webdriverio/wdio": true,
    "jest": true
  }
}
